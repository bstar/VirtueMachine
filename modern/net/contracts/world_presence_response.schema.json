{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://virtuemachine/contracts/world_presence_response.schema.json",
  "title": "WorldPresenceResponse",
  "type": "object",
  "required": ["players"],
  "properties": {
    "players": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["user_id", "username", "session_id", "map_x", "map_y", "map_z", "tick"],
        "properties": {
          "user_id": { "type": "string" },
          "username": { "type": "string" },
          "session_id": { "type": "string" },
          "character_name": { "type": "string" },
          "map_x": { "type": "integer" },
          "map_y": { "type": "integer" },
          "map_z": { "type": "integer" },
          "facing_dx": { "type": "integer" },
          "facing_dy": { "type": "integer" },
          "tick": { "type": "integer", "minimum": 0 },
          "mode": { "type": "string" },
          "updated_at_ms": { "type": "integer", "minimum": 0 }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}
