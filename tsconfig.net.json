{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "allowJs": false,
    "checkJs": false,
    "noEmit": true,
    "strict": false,
    "skipLibCheck": true,
    "lib": [
      "ES2022"
    ],
    "types": [
      "node"
    ],
    "moduleDetection": "force"
  },
  "include": [
    "modern/net/**/*.ts",
    "modern/common/**/*.ts"
  ],
  "exclude": [
    "modern/**/tests/**"
  ]
}
