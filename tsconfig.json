{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "types": ["node"],
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": false,
    "skipLibCheck": true
  },
  "include": [
    "modern/client-web/app.ts",
    "modern/common/**/*.mjs",
    "modern/client-web/conversation/**/*.js",
    "modern/client-web/ui_probe_contract.js",
    "modern/client-web/render_composition.js",
    "modern/client-web/legacy_object_order.js",
    "modern/client-web/net/**/*.js",
    "modern/client-web/net/**/*.ts"
  ],
  "exclude": [
    "modern/**/tests/**"
  ]
}
